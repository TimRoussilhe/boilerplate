/*==========  Global styles  ==========*/


html {
 box-sizing: border-box;
}
*, *:before, *:after {
 box-sizing: inherit;
}

body.is-scrolling{
	pointer-events : none;
}

.icon {

	font-size: base-icon-fontsize;

}

.clearfix:after {
	 visibility: hidden;
	 display: block;
	 font-size: 0;
	 content: " ";
	 clear: both;
	 height: 0;
}

.clearfix { display: inline-block; }
/* start commented backslash hack \*/
* html .clearfix { height: 1%; }
.clearfix { display: block; }
/* close commented backslash hack */
